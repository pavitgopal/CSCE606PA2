<p style="color: green"><%= notice %></p>

<% content_for :title, "Movies" %>

<h1>Movies</h1>

<div class="movies-container">
  <table>
    <thead>
      <tr>
        <th class="<%= 'sorted-asc' if session[:sort] == 'title' && session[:direction] == 'asc' %>
                    <%= 'sorted-desc' if session[:sort] == 'title' && session[:direction] == 'desc' %>">
          <%= link_to 'Title', movies_path(sort: 'title', direction: session[:direction] == 'asc' ? 'desc' : 'asc') %>
        </th>

        <th class="<%= 'sorted-asc' if session[:sort] == 'rating' && session[:direction] == 'asc' %>
                    <%= 'sorted-desc' if session[:sort] == 'rating' && session[:direction] == 'desc' %>">
          <%= link_to 'Rating', movies_path(sort: 'rating', direction: session[:direction] == 'asc' ? 'desc' : 'asc') %>
        </th>

        <th class="<%= 'sorted-asc' if session[:sort] == 'release_date' && session[:direction] == 'asc' %>
                    <%= 'sorted-desc' if session[:sort] == 'release_date' && session[:direction] == 'desc' %>">
          <%= link_to 'Release Date', movies_path(sort: 'release_date', direction: session[:direction] == 'asc' ? 'desc' : 'asc') %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= link_to movie.title, movie_path(movie) %></td>
          <td><%= movie.rating %></td>
          <td><%= movie.release_date %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="new-movie-container">
  <%= link_to "New movie", new_movie_path, class: 'new-movie-link' %>
</div>
